void damage() : {}{
	(
		(quantity())?
		"damage"
	|
		"that damage"
	)
	(
		generator()
	)?
	"to"
	selectors()}

void until() : {}
{
	"until"
	(		phaseorstep()
	|
		selectors()
		pattern()
	)
}

void activatedcost() : {}
{	(		< TAP >
	|
		< MANA >
	|
		"{X}"
	|
		cost()
	)
}

void cost() : {}
{
	(
		"discard"
		("s")?
		(			(
				quantity()
			|
				"an additional"
			)
			"card"
			("s")?
			("at random")?
		|
			selector()
		)
	|			"pay"
		("s")?
		(
			< MANA >
			(
				generator()
			)?
		|
			< INTEGER >
			"life"
		|
			"any amount of mana"
		)

		("before that draw step")?
	|
		"remove"
		(			quantity()
			token = < COUNTERTYPE >
			("s")?
			("on"|"from")
			selectors()
			(
				generator()
			)?
		|
			selectors()
			"from combat"
		)
	|	
		"sacrifice"
		("s")?
		(quantity())?
		selectors()	)
}

void quantity() : {}
{
	("up to")?
	
	(
		"a"
	|
		"a number of"
	|
		< NUMBERWORD >
	|	
		< INTEGER >
	|
		"X"
	|
		"that"
	|
		"that many"
	|
		"that much"	
	|
		"half his or her"
	|
		"any number of"
	|
		"all but"
		(			< INTEGER >
		|
			< NUMBERWORD >
		)
	)
}

void selectors() : {}{	selector()

	(
		LOOKAHEAD(
			("," selector())*
			(
				("and"|", and") selector() ("or"|".")
			|
				("or"|", or") selector() ("and"|"."|"this turn")
			)
		)
		(
			","
			selector()
		)*

		selector_final()
	)?
}

void selector_final() : {}{
	(
		("and"|", and")
		selector()
	|
		("or"|", or")
		selector()
	)}

void selector() : {}
{	(
		"you"
	|
		"he or she"
	|
		"~"
	|
		"of them"
	|		"it"
		(modifier())*
	|
		"the rest"
	|
		"target"
		target_selector()	|
		("a"|"an"|"all"|"each"|"the chosen"|"the other"|"the"|"that"|"those"|"other")?
		(attribute())+
		("s")?
		(modifier())*
	)
}

void target_selector() : {}{	(		(attribute())+
		(modifier())*
	)

	(		(			","
			target_selector()
		)+
		", or"
		target_selector()
	|
		"or"
		target_selector()
	)?
}

void countable() : {}{
	(
		LOOKAHEAD(2)
		("each")?		(
			(< COUNTERTYPE > | "counter")
		|	
			"mana"
		)
		("s")?
		(modifier())*
	|
		selectors()
	)
}

