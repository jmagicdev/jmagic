			selectors()
		|
			"control of"
			selectors()
			(				"for as long as you control"
				selectors()
			)?
		|	
			(				< STRING >
			|	
				< KEYWORD >
			)
			(until())?
		)
	|
		"get"
		("s")?
		< SIGNED_INTEGER >
		"/"
		< SIGNED_INTEGER >
		(until())?
	|
		"has"
		(			"base power"
			< INTEGER >
		)
		until()
	|
		"look at"
		selectors()
	|	
		"lose the game"
	|
		"loses"
		quantity()
		"life"
		(", rounded up"|", rounded down")?
	|	
		"put"
		(
			LOOKAHEAD(quantity() < COUNTERTYPE >)
			quantity()
			token = < COUNTERTYPE >
			("s")?
			("on"|"from")
			selectors()
			(
				generator()
			)?
			(				". This ability can't cause the total number of +1/+0 counters on ~ to be greater than seven"
			)?
		|
			LOOKAHEAD("a" < TOKEN_DEFINITION > "token")
			"a"
			< TOKEN_DEFINITION >
			"token"
			(modifier())*
			"onto the battlefield"
			(condition())?
			(				". They each have"
				(< KEYWORD > | < STRING >)
				(					"and"
					(< KEYWORD > | < STRING >)
