void modifier() : {}
{	(
		LOOKAHEAD(selectors() ("has controlled"|"control"))
		selectors()
		(
			"has controlled"
			"continuously since"
			phaseorstep()
		|
			"control"
			("s")?
		)
	|
		"'s ability"
	|
		("'s controller"|"s controller")
	|
		"s converted mana cost"
	|
		"'s hand"
	|
