			"the next"
			quantity()
			"damage that would be dealt to"
			selectors()
			"this turn"
		)
	|
		"regenerate"
		selectors()
	|	
		"return"
		selectors()
		"to the battlefield under its owner's control"
		(
			LOOKAHEAD(attribute())
			attribute()
		|
			modifier()
		)*
	|
		"take an extra turn after this one"
	|
		"tap"
		selectors()
	|
		"the next"
		< INTEGER >
		"damage that would be dealt to"
		selectors()
		"this turn is dealt to"
		selectors()
		"instead"
	|
		"the next time"
		selectors()
		pattern()
		","
		("instead")?
		effects()
		("instead")?
	|
		"this turn"
		","
		static_effect()
	|
		"untap"
		selectors()
	|
		until()
		","
		static_effect()
	|
